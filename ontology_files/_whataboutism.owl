Prefix(:=<http://www.semanticweb.org/lored/ontologies/2024/4/untitled-ontology-25#>)
Prefix(owl:=<http://www.w3.org/2002/07/owl#>)
Prefix(rdf:=<http://www.w3.org/1999/02/22-rdf-syntax-ns#>)
Prefix(xml:=<http://www.w3.org/XML/1998/namespace>)
Prefix(xsd:=<http://www.w3.org/2001/XMLSchema#>)
Prefix(rdfs:=<http://www.w3.org/2000/01/rdf-schema#>)


Ontology(<http://www.semanticweb.org/lored/ontologies/2024/4/untitled-ontology-25>
Import(<http://www.ontologydesignpatterns.org/ont/persp/perspectivisation.owl>)

Declaration(Class(:BlamableEventuality))
Declaration(Class(:BlamingClaim))
Declaration(Class(:BlamingClaimSituation))
Declaration(Class(:ConfirmationBias))
Declaration(Class(:FocusShiftingLens))
Declaration(Class(:LinguisticIdentifyingPattern))
Declaration(Class(:MoralValue))
Declaration(Class(:RedHerringFallacy))
Declaration(Class(:RelevanceFallacy))
Declaration(Class(:ResponsibilityOwner))
Declaration(Class(:StrawManFallacy))
Declaration(Class(:TuQuoqueFallacy))
Declaration(Class(:Whataboutism))
Declaration(ObjectProperty(:actsAgainst))
Declaration(ObjectProperty(:blames))
Declaration(ObjectProperty(:hasLinguisticIdentifyingPattern))
Declaration(ObjectProperty(:isBasedOn))
Declaration(ObjectProperty(:isContrastedIn))
Declaration(ObjectProperty(:isLinguisticIdentifyingPatternOf))
Declaration(ObjectProperty(:isObservedWith))
Declaration(ObjectProperty(:relatedTo))
Declaration(ObjectProperty(:shiftsFocusOn))

############################
#   Object Properties
############################

# Object Property: :actsAgainst (:actsAgainst)

ObjectPropertyDomain(:actsAgainst :ResponsibilityOwner)
ObjectPropertyRange(:actsAgainst :MoralValue)

# Object Property: :blames (:blames)

ObjectPropertyDomain(:blames :BlamingClaim)
ObjectPropertyRange(:blames :BlamableEventuality)

# Object Property: :hasLinguisticIdentifyingPattern (:hasLinguisticIdentifyingPattern)

InverseObjectProperties(:hasLinguisticIdentifyingPattern :isLinguisticIdentifyingPatternOf)
ObjectPropertyDomain(:hasLinguisticIdentifyingPattern :Whataboutism)
ObjectPropertyRange(:hasLinguisticIdentifyingPattern :LinguisticIdentifyingPattern)

# Object Property: :isBasedOn (:isBasedOn)

ObjectPropertyDomain(:isBasedOn :Whataboutism)
ObjectPropertyRange(:isBasedOn :BlamingClaimSituation)

# Object Property: :isContrastedIn (:isContrastedIn)

ObjectPropertyDomain(:isContrastedIn :MoralValue)
ObjectPropertyRange(:isContrastedIn :BlamableEventuality)

# Object Property: :isObservedWith (:isObservedWith)

ObjectPropertyDomain(:isObservedWith :BlamableEventuality)
ObjectPropertyRange(:isObservedWith :FocusShiftingLens)

# Object Property: :relatedTo (:relatedTo)

ObjectPropertyDomain(:relatedTo :ConfirmationBias)
ObjectPropertyDomain(:relatedTo :RelevanceFallacy)
ObjectPropertyRange(:relatedTo :Whataboutism)

# Object Property: :shiftsFocusOn (:shiftsFocusOn)

ObjectPropertyDomain(:shiftsFocusOn :FocusShiftingLens)
ObjectPropertyRange(:shiftsFocusOn :BlamableEventuality)



############################
#   Classes
############################

# Class: <http://www.ontologydesignpatterns.org/ont/persp/perspectivisation.owl#Blendable> (<http://www.ontologydesignpatterns.org/ont/persp/perspectivisation.owl#Blendable>)

EquivalentClasses(<http://www.ontologydesignpatterns.org/ont/persp/perspectivisation.owl#Blendable> :BlamableEventuality)

# Class: :BlamableEventuality (:BlamableEventuality)

AnnotationAssertion(rdfs:comment :BlamableEventuality "The BlamableEventiality is a subclass of Eventuality which is equivalent to the class Blendable. Thus, it is also a subclass of the BlendingTheorySituation. This makes the BlamableEventuality blendable with others blamable eventualities by means of a blending element.")
SubClassOf(:BlamableEventuality <http://www.ontologydesignpatterns.org/ont/persp/perspectivisation.owl#Eventuality>)

# Class: :BlamingClaim (:BlamingClaim)

AnnotationAssertion(rdfs:comment :BlamingClaim "A BlamingClaim is a textual instance of blaming that accuses some ResponsibilityOwner to act against some MoralValue.")
SubClassOf(:BlamingClaim :BlamingClaimSituation)

# Class: :BlamingClaimSituation (:BlamingClaimSituation)

AnnotationAssertion(rdfs:comment :BlamingClaimSituation "A BlaimingClaimSituation is constituted by a blaming act, the BlaimimgClaim, a textual claim that accuses some ResponsibilityOwner for  acting against a MoralValue. The BlamingClaim blames some BlamableEventuality. The BlamingClaimSituation is a subclass of the Blending class. This means that it acts as a blending element according to the Blending Theory.")
SubClassOf(:BlamingClaimSituation <http://www.ontologydesignpatterns.org/ont/persp/perspectivisation.owl#Blending>)

# Class: :ConfirmationBias (:ConfirmationBias)

SubClassOf(:ConfirmationBias :FocusShiftingLens)

# Class: :FocusShiftingLens (:FocusShiftingLens)

AnnotationAssertion(rdfs:comment :FocusShiftingLens "A FocusShiftingLens modifies the perspectivisation of an eventuality by shifting the focus of the watcher on another element. It is used to observe a blamable eventuality by shifting the focus on another blamable eventuality.")
SubClassOf(:FocusShiftingLens <http://www.ontologydesignpatterns.org/ont/persp/perspectivisation.owl#Lens>)

# Class: :LinguisticIdentifyingPattern (:LinguisticIdentifyingPattern)

AnnotationAssertion(rdfs:comment :LinguisticIdentifyingPattern "A Linguistic pattern that identifies Whataboutism as a Lens of Perspectivisation.")

# Class: :MoralValue (:MoralValue)

AnnotationAssertion(rdfs:comment :MoralValue "A MoralValue is contrasted by the action of a ResponsibilityOwner within a verbal accusation consisting in a BlaimingClaim.")
SubClassOf(:MoralValue :BlamingClaim)

# Class: :RedHerringFallacy (:RedHerringFallacy)

SubClassOf(:RedHerringFallacy :RelevanceFallacy)

# Class: :RelevanceFallacy (:RelevanceFallacy)

SubClassOf(:RelevanceFallacy :FocusShiftingLens)

# Class: :ResponsibilityOwner (:ResponsibilityOwner)

AnnotationAssertion(rdfs:comment :ResponsibilityOwner "A ResponsibilityOwner is accused of acting against a moral value within a blaiming claim.")
SubClassOf(:ResponsibilityOwner :BlamingClaim)

# Class: :StrawManFallacy (:StrawManFallacy)

SubClassOf(:StrawManFallacy :RelevanceFallacy)

# Class: :TuQuoqueFallacy (:TuQuoqueFallacy)

SubClassOf(:TuQuoqueFallacy :RelevanceFallacy)

# Class: :Whataboutism (:Whataboutism)

SubClassOf(:Whataboutism :FocusShiftingLens)


)